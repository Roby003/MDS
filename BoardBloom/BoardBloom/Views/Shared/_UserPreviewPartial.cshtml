@model ApplicationUser

<div class="user-preview-card">
    <div class="user-preview-avatar">
        @if (Model.ProfilePicture != null)
        {
            <img src="data:image/png;base64,@Convert.ToBase64String(Model.ProfilePicture)" alt="@Model.UserName" />
        }
        else
        {
            <img src="https://st3.depositphotos.com/6672868/13701/v/450/depositphotos_137014128-stock-illustration-user-profile-icon.jpg" alt="@Model.UserName" />
        }
    </div>

    <div class="user-preview-info">
        <h4>@Model.UserName</h4>
        <div class="user-stats">
            <span title="Blooms">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M21 7V17C21 20 19.5 22 16 22H8C4.5 22 3 20 3 17V7C3 4 4.5 2 8 2H16C19.5 2 21 4 21 7Z" stroke="currentColor" stroke-width="1.5" />
                    <path d="M15.5 2V9.85L13.24 7.6C12.84 7.2 12.16 7.2 11.76 7.6L9.5 9.85V2H15.5Z" stroke="currentColor" stroke-width="1.5" />
                </svg>
                @Model.Blooms?.Count()
            </span>
            <span title="Communities">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M17 10C19.2091 10 21 8.20914 21 6C21 3.79086 19.2091 2 17 2C14.7909 2 13 3.79086 13 6C13 8.20914 14.7909 10 17 10Z" stroke="currentColor" stroke-width="1.5" />
                    <path d="M7 22C9.20914 22 11 20.2091 11 18C11 15.7909 9.20914 14 7 14C4.79086 14 3 15.7909 3 18C3 20.2091 4.79086 22 7 22Z" stroke="currentColor" stroke-width="1.5" />
                    <path d="M17 22V10M7 14V2" stroke="currentColor" stroke-width="1.5" />
                </svg>
                @Model.Communities?.Count()
            </span>
            <span title="Comments">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M8.5 19H8C4 19 2 18 2 13V8C2 4 4 2 8 2H16C20 2 22 4 22 8V13C22 17 20 19 16 19H15.5C15.19 19 14.89 19.15 14.7 19.4L13.2 21.4C12.54 22.28 11.46 22.28 10.8 21.4L9.3 19.4C9.14 19.18 8.77 19 8.5 19Z" stroke="currentColor" stroke-width="1.5" />
                    <path d="M7 8H17M7 13H13" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" />
                </svg>
                @Model.Comments?.Count()
            </span>
        </div>
    </div>

    <div class="view-profile-button">
        <a href="/Users/UserProfile?userId=@Model.Id">View</a>
    </div>
</div>  