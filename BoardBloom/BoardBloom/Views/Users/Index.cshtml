<div class="row">
    @foreach (var user in ViewBag.UsersList)
    {
        <div class="col-4 mb-4">
            <div class="card" style="height:100%; width: 100%;">

                <div class="card-body d-flex justify-content-between flex-column">
                    <div>
                        <p style="border-bottom: 2px solid purple;"><i class="bi bi-person"> </i> UserName: @user.UserName</p>

                        <p style="border-bottom: 2px solid #8484ff;"><i class="bi bi-envelope"></i> Email utilizator: @user.Email</p>

                        @if (@user.FirstName != null)
                        {
                            <p style="border-bottom: 2px solid #8484ff;"><i class="bi bi-person"> </i> Nume utilizator: @user.FirstName</p>
                        }

                        @if (@user.LastName != null)
                        {
                            <p style="border-bottom: 2px solid #8484ff;"><i class="bi bi-person"> </i> Prenume utilizator: @user.LastName</p>
                        }

                        @if (@user.PhoneNumber != null)
                        {
                            <p style="border-bottom: 2px solid #8484ff;"><i class="bi bi-phone"></i> Telefon utilizator: @user.PhoneNumber</p>
                        }

                    </div>

                    <div class="d-flex flex-row justify-content-between p-3">

                        <div> <a class="btn btn-sm" style="background-color: #3838b2; color: #ffffff;" href="/Users/Edit/@user.Id"> Editare utilizator</a> </div>

                        <div> <a class="btn btn-sm" style="background-color: #3838b2; color: #ffffff;" href="/Users/Show/@user.Id"> Vizualizare utilizator</a> </div>

                    </div>
                </div>

            </div>
        </div>
    }

</div>

