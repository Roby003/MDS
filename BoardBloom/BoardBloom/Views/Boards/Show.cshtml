@model BoardBloom.Models.Board

<style>
    .speech {
        font-size: 1.2em;
        color: purple;
        background: #fff;
        /* (A2) DIMENSIONS */
        padding: 20px;
        border-radius: 10px;
        max-width: 600px;
        border-radius: 30px;
        border: 5px solid purple;
    }

        .speech::after {
            display: block;
            width: 0;
            content: "";
            border: 15px solid transparent;
        }

        /* (C) "CALLOUT" DIRECTIONS */

        .speech.left::after {
            border-right-color: purple;
            border-left: 0;
        }


    /* (D) POSITION THE CALLOUT */
    .speech {
        position: relative;
        margin: 30px;
    }

        .speech::after {
            position: absolute;
        }

        .speech.left::after {
            left: -15px;
            top: calc(50% - 15px);
        }


    .user-link {
        color: #555;
        text-decoration: none;
        font-weight: bold;
        transition: color 0.3s;
    }

        .user-link:hover {
            color: #8484ff;
        }

</style>

@if (TempData["message"] != null)
{
    <div class="alert @ViewBag.Alert p-3 rounded-3 text-center mb-5">
        @ViewBag.Message
    </div>
}

<div class="row">


    <div style="text-align: center; margin-bottom: 50px; margin-top: 30px;">

        <h2 class="card-title" style="font-family: 'Rubik Doodle Shadow', cursive;" name="Name">@Model.Name</h2>

        <div>
            @*    <i class="bi bi-person-check"></i> By: @Model.User.UserName *@

            <a class="user-link" href="@Url.Action("UserProfile", "Users", new { userId = Model.User.Id })">
                <i class="bi bi-person-check"></i> By: @Model.User.UserName
            </a>
        </div>

    </div>



    <div style="text-align: center;">

        <div>
            @if (Model.User.ProfilePicture != null)
            {
                <div style="display: inline-block;">
                    <img style="width:200px;height:200px;
                             object-fit:cover;
                             border-radius:30px; border: 5px solid purple;"
                         src="data:image/*;base64,@(Convert.ToBase64String(Model.User.ProfilePicture))">
                </div>
            }

            @if (Model.Note != "")
            {
                <div class="speech left" style="display: inline-block; vertical-align: top; margin-left: 10px;">
                    NOTE: @Model.Note
                </div>
            }

        </div>

    </div>

    @if (Model.UserId == ViewBag.UserCurent || ViewBag.EsteAdmin)
    {
        <div style="margin-top:30px; text-align: center;">
            <a class="btn btn"
               style="

                background-color: purple;
                color: #ffffff;"
               href="/Boards/Edit/@Model.Id">
                <i class="bi bi-pencil-square"></i>
                Editeaza
            </a>
        </div>
    }

    <div style="text-align: center; margin-bottom: 50px;
                                    margin-top: 50px;">
        <h3 style="font-family: 'Rubik Doodle Shadow', cursive">
            Bloom-urile din board:
        </h3>
    </div>


    @if (Model.BloomBoards.Count > 0)

        @foreach (var bloomBoard in Model.BloomBoards)
        {
            <div class="col-12">
                <div class="card mx-auto" style="max-width: 700px;">
                    <div class="card-header">
                        <ul class="nav nav-tabs card-header-tabs" style="display: flex; justify-content: space-between;">
                            <li class="nav-item">
                                <a class="user-link" href="@Url.Action("UserProfile", "Users", new { userId = bloomBoard.Bloom.User.Id })">
                                    <i class="bi bi-person"></i> @bloomBoard.Bloom.User.UserName
                                </a>
                            </li>


                            <li class="nav-item">
                                <a>
                                    @bloomBoard.Bloom.Date
                                </a>
                            </li>

                        </ul>
                    </div>
                    <div class="card-body">

                        @Html.Partial("BloomInfo", bloomBoard.Bloom)

                        <div class="card-text">@bloomBoard.Bloom.Content</div>

                        <div class="d-flex flex-row justify-content-between p-3 border-1 border-top">
                            <a class="btn btn"
                               style="background-color: #3838b2; color: #ffffff;"
                               href="/Blooms/Show/@bloomBoard.Bloom.Id">Afisare Bloom</a>

                            @if (bloomBoard.Bloom.UserId == ViewBag.UserCurent)
                            {
                                <form method="post" action="/Blooms/RemoveFromBoard/">
                                    <input type="hidden" name="bloomId" value="@bloomBoard.BloomId" />
                                    <input type="hidden" name="boardId" value="@bloomBoard.BoardId" />

                                    <button class="btn btn-danger" type="submit">Sterge Bloom-ul din Board</button>
                                </form>
                            }

                        </div>

                    </div>
                </div>
                <br />
            </div>


        }

</div>


