@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<head>
    <link rel="stylesheet" href="~/css/auth.css" />
</head>

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h1>Create Account</h1>
            <p class="auth-subtitle">Join the Bloom community</p>
        </div>

        <form class="auth-form" id="account" method="post" asp-route-returnUrl="@Model.ReturnUrl">
            <div asp-validation-summary="ModelOnly" class="auth-error"></div>

            <div class="auth-input-group">
                <div class="auth-input-wrapper">
                    <input asp-for="Input.Email"
                           class="auth-input"
                           placeholder="Email"
                           autocomplete="username"
                           aria-required="true" />
                    <span class="auth-input-icon">✉️</span>
                </div>
                <span asp-validation-for="Input.Email" class="auth-validation-error"></span>
            </div>

            <div class="auth-input-group">
                <div class="auth-input-wrapper">
                    <input asp-for="Input.Password"
                           class="auth-input"
                           placeholder="Password"
                           type="password"
                           autocomplete="new-password"
                           aria-required="true" />
                    <span class="auth-input-icon">🔒</span>
                </div>
                <span asp-validation-for="Input.Password" class="auth-validation-error"></span>
            </div>

            <div class="auth-input-group">
                <div class="auth-input-wrapper">
                    <input asp-for="Input.ConfirmPassword"
                           class="auth-input"
                           placeholder="Confirm Password"
                           type="password"
                           autocomplete="new-password"
                           aria-required="true" />
                    <span class="auth-input-icon">🔒</span>
                </div>
                <span asp-validation-for="Input.ConfirmPassword" class="auth-validation-error"></span>
            </div>

            <button type="submit" class="auth-submit-button">
                Create Account
                <span class="auth-button-icon">→</span>
            </button>
        </form>

        <div class="auth-footer">
            <p>Already have an account? <a href="/Identity/Account/Login" class="auth-link">Log in</a></p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}