@page
@{
    ViewData["Title"] = "Password Reset Email Sent";
}

<head>
    <link rel="stylesheet" href="~/css/auth.css" />
</head>

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h1>Check Your Email</h1>
            <p class="auth-subtitle">Instructions sent to reset your password</p>
        </div>

        <div class="auth-confirmation-content">
            <p class="auth-confirmation-text">
                Please check your email to reset your password.
            </p>
        </div>

        <a href="/Identity/Account/Login" class="auth-submit-button">
            Back to Login
        </a>
    </div>
</div>