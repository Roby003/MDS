@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
}

<head>
    <link rel="stylesheet" href="~/css/auth.css" />
</head>

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h1>Reset Password</h1>
            <p class="auth-subtitle">Enter your email to receive reset instructions</p>
        </div>

        <form class="auth-form" method="post">
            <div asp-validation-summary="ModelOnly" class="auth-error"></div>

            <div class="auth-input-group">
                <div class="auth-input-wrapper">
                    <input asp-for="Input.Email"
                           class="auth-input"
                           placeholder="Email"
                           autocomplete="username"
                           aria-required="true" />
                    <span class="auth-input-icon">✉️</span>
                </div>
                <span asp-validation-for="Input.Email" class="auth-validation-error"></span>
            </div>

            <button type="submit" class="auth-submit-button">
                Send Reset Link
                <span class="auth-button-icon">→</span>
            </button>
        </form>

        <div class="auth-footer">
            <p>Remember your password? <a href="/Identity/Account/Login" class="auth-link">Log in</a></p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}